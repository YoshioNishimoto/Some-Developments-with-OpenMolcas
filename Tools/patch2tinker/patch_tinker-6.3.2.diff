+            pscale(i14(j,ii)) = 1.0d0
+         end do
+         do j = 1, n15(ii)
+            mscale(i15(j,ii)) = 1.0d0
+            pscale(i15(j,ii)) = 1.0d0
+         end do
+cqmmm
+  99     continue
+      end do
+c
+c     perform deallocation of some local arrays
+c
+      deallocate (mscale)
+      deallocate (pscale)
+      return
+      end

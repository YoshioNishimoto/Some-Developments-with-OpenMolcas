+         inquire (file=minfile,exist=exist)
+         if (exist) goto 1999 
+         imin = freeunit ()
+         open (unit=imin,file=minfile,status='unknown')
+         call prtxyz (imin)
+         close (unit=imin)
+      end if
+c
+      return
+      end

% Custom math command definitions
\DeclareMathOperator{\sign}{sign}
\DeclareMathOperator{\abs}{abs}
\DeclareMathOperator{\Tr}{Tr}
\newcommand{\mat}[1]{\boldsymbol{#1}}
\newcommand{\bra}[1]{\left<#1\right|}
\newcommand{\ket}[1]{\left|#1\right>}
\newcommand{\braket}[2]{\left<#1\middle|#2\right>}
\newcommand{\braopket}[3]{\left<#1\middle|#2\middle|#3\right>}

% Custom role definitions
\newcommand{\DUroleprogram}[1]{\texttt{\textbf{#1}}} % uppercased with a docutils Transform
\newcommand{\DUrolefile}[1]{\texttt{\textit{#1}}}
\newcommand{\DUrolekword}[1]{\textsc{\textbf{#1}}}
\newcommand{\DUrolecommand}[1]{\textsf{#1}}
\newcommand{\DUrolevariable}[1]{\textrm{#1}}
\newcommand{\DUrolesc}[1]{\textsc{#1}}
